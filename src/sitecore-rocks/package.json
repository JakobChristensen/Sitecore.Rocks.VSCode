{
    "name": "sitecore-rocks",
    "displayName": "Sitecore.Rocks",
    "description": "Sitecore Rocks VS Code",
    "version": "0.0.1",
    "publisher": "Sitecore",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:sitecoreExplorer"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sitecore.addConnection",
                "title": "Sitecore: Add Connection"
            },
            {
                "command": "extension.sitecore.removeConnection",
                "title": "Sitecore: Remove Connection"
            },
            {
                "command": "extension.sitecore.editItem",
                "title": "Sitecore: Edit Item"
            },
            {
                "command": "extension.sitecoreSaveItem",
                "title": "Sitecore: Save Item"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "sitecoreExplorer",
                    "name": "Sitecore"
                }
            ]
        },
        "menus": {
            "view/title": [
				{
					"command": "extension.sitecore.addConnection",
					"when": "view == sitecoreExplorer"
				}
			],
			"view/item/context": [
				{
					"command": "extension.sitecore.editItem",
					"when": "view == sitecoreExplorer && viewItem == item"
                },
                {
					"command": "extension.sitecore.removeConnection",
					"when": "view == sitecoreExplorer && viewItem == connection"
				}
            ]
		}
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "@types/node": "^8.0.26",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "typed-rest-client": "^0.12.0"
    }
}